    "dev:frontend": "vite",
    "dev:backend": ".\\.venv\\Scripts\\python.exe -m uvicorn backend.main:app --reload --host 0.0.0.0 --port 54322",
    "inject-metadata": "node -e \"const fs=require('fs'); const pkg=require('./package.json'); const meta={creator:pkg.creator, version:pkg.version, copyright:pkg.systemMetadata.copyright, timestamp:new Date().toISOString()}; fs.writeFileSync('./src/metadata.json', JSON.stringify(meta, null, 2)); console.log('Metadata injected.');\"",
    "build": "npm run inject-metadata && vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
