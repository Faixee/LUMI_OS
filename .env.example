# LUMIX OS - Environment Variables
# Copy this to .env and fill in the values

# Environment
ENVIRONMENT=production
FRONTEND_URL=https://your-app.vercel.app

# Database
POSTGRES_DB=lumios_db
POSTGRES_USER=lumios_user
POSTGRES_PASSWORD=your_secure_password

# Security
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=https://lumi-os-omega.vercel.app,http://localhost:5173,http://127.0.0.1:5173

# Frontend API Endpoint (Vite)
# Use /api to leverage the Vercel Proxy and avoid Mixed Content (HTTPS/HTTP) errors
VITE_API_URL=/api

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
